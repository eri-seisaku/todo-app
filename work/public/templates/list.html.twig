{% extends "app.html.twig" %}

{% set title = 'List' %}
{% block content %}
  <section>
    <div class="container py-5 vh-100">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12">
          <div class="card p-3 shadow-2-strong">
            <div class="card-bodyr">
            {# Head content start #}
              <div class="d-flex justify-content-between align-items-center mb-3">
                {# 検索窓 #}
                <input type="search" class="form-control w-50 search use_icon" name="search" placeholder="&#xf002;">
              </div>
            {# /Head content start #}
            {# Main contents start #}
            <table class="table">
              <thead>
                  <tr>
                    <th scope="col">Icon</th>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Content</th>
                    <th scope="col">Status</th>
                  </tr>
                </thead>
                <tbody id="todoList">
                {% for list in all_list %}
                  <tr class="todoItem">
                    <td>
                      <img src="../image/icon/{{ list.icon_filename }}" alt="ユーザーIcon" width="32" height="32" class="rounded-circle me-2" loading="lazy">
                    </td>
                    <td>
                      {{ list.id }}
                    </td>
                    <td>
                      {{ list.title }}
                    </td>
                    <td>
                      {{ list.content }}
                    </td>
                    <td>
                      {{ list.is_done is same as(1) ? '済' : '未'  }}
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
            {# /Main contents start #}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

